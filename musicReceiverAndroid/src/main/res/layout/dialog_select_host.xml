<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/dialog_min_width"
    android:orientation="vertical" >
    
    <Spinner
    	android:id="@+id/hostSpinner"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:background="@drawable/background_white"
		android:layout_margin="5dp"
    	/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_empty_height"
        />
    
    <EditText
    	android:id="@+id/hostnameET"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:hint="@string/string_input_host"
		android:background="@drawable/background_white"
		android:layout_margin="5dp"
    	/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_empty_height"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    	<Button
    		android:id="@+id/okBtn"
    		android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:text="@string/string_ok"
			android:background="@drawable/background_aa"
			android:layout_margin="5dp"
    		/>
    
    	<Button
    		android:id="@+id/exitBtn"
    		android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:text="@string/string_exit"
			android:background="@drawable/background_aa"
			android:layout_margin="5dp"
    		/>
    </LinearLayout>

</LinearLayout>
