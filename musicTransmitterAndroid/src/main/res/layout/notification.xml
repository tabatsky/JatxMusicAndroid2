<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_album_art"
        android:layout_width="@dimen/album_art_size_notification"
        android:layout_height="@dimen/album_art_size_notification"
        android:padding="@dimen/album_art_padding"
        />

    <TextView
        android:layout_width="@dimen/spacer_width_notification"
        android:layout_height="@dimen/button_size_notification" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_title"
            android:textAppearance="@style/TextAppearance.MusicTransmitter.Notification"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_artist"
            android:textAppearance="@style/TextAppearance.MusicTransmitter.Notification"
            android:textStyle="italic"
            android:textSize="16sp"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            >

            <ImageButton
                android:id="@+id/rew"
                android:layout_width="@dimen/button_size_notification"
                android:layout_height="@dimen/button_size_notification"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_rew"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                style="@style/Widget.MusicTransmitter.NotificationButton"
                />

            <TextView
                android:layout_width="@dimen/spacer_width_notification"
                android:layout_height="@dimen/button_size_notification" />

            <ImageButton
                android:id="@+id/play"
                android:layout_width="@dimen/button_size_notification"
                android:layout_height="@dimen/button_size_notification"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_play"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                style="@style/Widget.MusicTransmitter.NotificationButton"
                />

            <ImageButton
                android:id="@+id/pause"
                android:layout_width="@dimen/button_size_notification"
                android:layout_height="@dimen/button_size_notification"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_pause"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:background="@android:color/transparent"
                style="@style/Widget.MusicTransmitter.NotificationButton"
                />

            <TextView
                android:layout_width="@dimen/spacer_width_notification"
                android:layout_height="@dimen/button_size_notification" />

            <ImageButton
                android:id="@+id/fwd"
                android:layout_width="@dimen/button_size_notification"
                android:layout_height="@dimen/button_size_notification"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_fwd"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                style="@style/Widget.MusicTransmitter.NotificationButton"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
