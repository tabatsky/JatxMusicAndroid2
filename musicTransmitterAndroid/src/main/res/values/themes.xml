<resources
    xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MusicTransmitter" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/gray5F</item>
    </style>

    <style name="Theme.MusicTransmitter" parent="Base.Theme.MusicTransmitter">
        <item name="actionBarTheme">@style/ThemeOverlay.MusicTransmitter.ActionBar</item>
        <item name="materialButtonStyle">@style/Widget.MusicTransmitter.Button</item>
        <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.MusicTransmitter.Editor" parent="Base.Theme.MusicTransmitter">
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="materialButtonStyle">@style/Widget.MusicTransmitter.Button</item>
    </style>

    <style name="Base.Theme.MusicTransmitter.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.MusicTransmitter.Dialog" parent="Base.Theme.MusicTransmitter.Dialog">
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="materialButtonStyle">@style/Widget.MusicTransmitter.Button</item>
    </style>

    <style name="ThemeOverlay.MusicTransmitter.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:titleTextStyle">@style/TextAppearance.MusicTransmitter.Title</item>
    </style>

    <style name="TextAppearance.MusicTransmitter.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MusicTransmitter.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MusicTransmitter.Button.Notification">
        <item name="android:tint">?android:attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.MusicTransmitter.Notification" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

</resources>